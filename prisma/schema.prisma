generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

generator zod {
  provider          = "zod-prisma-types"
  output            = "../src/generated/zod"
  useTypeAssertions = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator custom_generator {
  provider = "prisma-generator-fake-data"
  output   = "../src/generated/faker/data.ts"
}

enum UserStatus {
  active
  inactive
}

enum VendorStatus {
  active
  inactive
}

enum UserVendorRoleStatus {
  active
  inactive
}

enum ProductStatus {
  active
  inactive
  draft
}

enum OrderStatus {
  pending
  confirmed
  processing
  shipped
  delivered
  cancelled
  refunded
}

enum AddressType {
  shipping // giao hàng
  return // trả hàng
  billing // thanh toán
  pickup // lấy tại cửa hàng
}

enum PromotionStatus {
  active
  inactive
  expired
}

enum PromotionType {
  percentage
  fixed_amount
  free_shipping
  buy_x_get_y
}

model User {
  id          String     @id @default(uuid())
  email       String     @unique /// @zod.string.email()
  ///FAKE:faker.internet.password()
  password    String
  firstName   String
  lastName    String?
  fullAddress String
  city        String?
  province    String?
  country     String?
  phone       String?
  status      UserStatus @default(active)
  createdAt   DateTime   @default(now())
  createdBy   String?
  updatedAt   DateTime   @updatedAt
  deletedAt   DateTime?

  vendors         Vendor[]
  userVendorRoles UserVendorRole[]
  orders          Order[]
  cart            Cart?
  notifications   Notification[]
}

model Vendor {
  id            String       @id @default(uuid())
  userID        String
  name          String
  slug          String       @unique
  description   String?
  logoUrl       String?
  taxCode       String?
  totalProducts Int          @default(0)
  totalOrders   Int          @default(0)
  status        VendorStatus @default(active)
  createdAt     DateTime     @default(now())
  createdBy     String?
  updatedAt     DateTime     @updatedAt
  deletedAt     DateTime?

  user            User             @relation(fields: [userID], references: [id])
  products        Product[]
  userVendorRoles UserVendorRole[]
}

model Role {
  id           String    @id @default(uuid())
  name         String    @unique
  description  String?
  isSystemRole Boolean   @default(false)
  createdAt    DateTime  @default(now())
  createdBy    String?
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?

  userVendorRoles UserVendorRole[]
  rolePermissions RolePermission[]
}

model Permission {
  id                 String    @id @default(uuid())
  name               String
  description        String?
  key                String /// @zod.string.describe("Pattern: [/resource]_[action], e.g: [/product]_[read], [/product]_[create], [/product]_[manage]")
  isSystemPermission Boolean   @default(false)
  createdAt          DateTime  @default(now())
  createdBy          String?
  updatedAt          DateTime  @updatedAt
  deletedAt          DateTime?

  rolePermissions RolePermission[]

  @@unique([name, key])
}

model RolePermission {
  roleID       String
  permissionID String
  createdAt    DateTime @default(now())
  createdBy    String?

  role       Role       @relation(fields: [roleID], references: [id])
  permission Permission @relation(fields: [permissionID], references: [id])

  @@id([roleID, permissionID])
}

model UserVendorRole {
  id        String               @id @default(uuid())
  userID    String
  vendorID  String
  roleID    String
  status    UserVendorRoleStatus @default(active)
  createdAt DateTime             @default(now())
  createdBy String?

  user   User   @relation(fields: [userID], references: [id])
  vendor Vendor @relation(fields: [vendorID], references: [id])
  role   Role   @relation(fields: [roleID], references: [id])

  @@unique([userID, vendorID])
}

model Category {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String?
  parentID    String?
  imageUrl    String?
  createdAt   DateTime  @default(now())
  createdBy   String?
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  parent            Category?         @relation("CategoryParent", fields: [parentID], references: [id])
  children          Category[]        @relation("CategoryParent")
  productCategories ProductCategory[]
}

model Product {
  id            String        @id @default(uuid())
  vendorID      String
  name          String
  slug          String        @unique
  description   String?
  sku           String?       @unique
  price         Decimal
  stockQuantity Int           @default(0)
  status        ProductStatus @default(draft)
  createdAt     DateTime      @default(now())
  createdBy     String?
  updatedAt     DateTime      @updatedAt
  deletedAt     DateTime?

  vendor            Vendor            @relation(fields: [vendorID], references: [id])
  productCategories ProductCategory[]
  productImages     ProductImage[]
  productVariants   ProductVariant[]
}

model ProductVariant {
  id            String    @id @default(uuid())
  productID     String
  name          String?
  sku           String?   @unique
  price         Decimal
  stockQuantity Int       @default(0)
  attributes    Json?
  createdAt     DateTime  @default(now())
  createdBy     String?
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?

  product       Product        @relation(fields: [productID], references: [id])
  productImages ProductImage[]
  orderItems    OrderItem[]
  cartItems     CartItem[]
}

model ProductCategory {
  productID  String
  categoryID String

  product  Product  @relation(fields: [productID], references: [id])
  category Category @relation(fields: [categoryID], references: [id])

  @@id([productID, categoryID])
}

model ProductImage {
  id               String    @id @default(uuid())
  name             String
  description      String?
  // Nếu productID có giá trị → ảnh thuộc product gốc (ảnh chung).
  productID        String?
  // Nếu productVariantID có giá trị → ảnh gắn với variant.
  productVariantID String?
  ///FAKE:faker.image.url()
  imageUrl         String
  sortOrder        Int       @default(0)
  createdAt        DateTime  @default(now())
  createdBy        String?
  updatedAt        DateTime  @updatedAt
  deletedAt        DateTime?

  product        Product?        @relation(fields: [productID], references: [id])
  productVariant ProductVariant? @relation(fields: [productVariantID], references: [id])
}

model Order {
  id             String      @id @default(uuid())
  orderNumber    String      @unique
  userID         String
  status         OrderStatus @default(pending)
  subtotal       Decimal
  taxAmount      Decimal     @default(0)
  shippingAmount Decimal     @default(0)
  discountAmount Decimal     @default(0)
  totalAmount    Decimal
  currency       String      @default("VND")
  notes          String?
  shippedAt      DateTime?
  deliveredAt    DateTime?
  createdAt      DateTime    @default(now())
  createdBy      String?
  updatedAt      DateTime    @updatedAt
  deletedAt      DateTime?

  user            User             @relation(fields: [userID], references: [id])
  orderItems      OrderItem[]
  orderAddresses  OrderAddress[]
  orderPromotions OrderPromotion[]
  payments        Payment[]
}

model OrderItem {
  id                     String  @id @default(uuid())
  orderID                String
  productVariantID       String
  quantity               Int     @default(1)
  unitPrice              Decimal
  totalPrice             Decimal
  /// [ProductVariantSnapshotType]
  productVariantSnapshot Json?

  productVariant ProductVariant @relation(fields: [productVariantID], references: [id])
  order          Order          @relation(fields: [orderID], references: [id])
}

model OrderAddress {
  id          String      @id @default(uuid())
  orderID     String
  type        AddressType @default(shipping)
  firstName   String
  lastName    String?
  company     String?
  fullAddress String
  city        String?
  province    String?
  country     String?
  phone       String

  order Order @relation(fields: [orderID], references: [id])
}

model Promotion {
  id          String          @id @default(uuid())
  code        String          @unique
  name        String
  description String?
  type        PromotionType   @default(percentage)
  value       Decimal
  usageLimit  Int?
  startDate   DateTime        @default(now())
  endDate     DateTime?
  status      PromotionStatus @default(inactive)
  createdAt   DateTime        @default(now())
  createdBy   String?
  updatedAt   DateTime        @updatedAt
  deletedAt   DateTime?

  orderPromotions OrderPromotion[]
}

model OrderPromotion {
  id             String  @id @default(uuid())
  orderID        String
  promotionID    String
  discountAmount Decimal @default(0)

  order     Order     @relation(fields: [orderID], references: [id])
  promotion Promotion @relation(fields: [promotionID], references: [id])

  @@unique([orderID, promotionID])
}

model Cart {
  id        String   @id @default(uuid())
  userID    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User       @relation(fields: [userID], references: [id])
  cartItems CartItem[]
}

model CartItem {
  id               String   @id @default(uuid())
  cartID           String
  productVariantID String
  quantity         Int      @default(1)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  cart           Cart           @relation(fields: [cartID], references: [id], onDelete: Cascade)
  productVariant ProductVariant @relation(fields: [productVariantID], references: [id])

  @@unique([cartID, productVariantID])
}

model Notification {
  id      String  @id @default(uuid())
  userID  String
  title   String
  message String
  isRead  Boolean @default(false)

  User User? @relation(fields: [userID], references: [id])
}

enum PaymentStatus {
  pending
  completed
  failed
  refunded
}

enum PaymentType {
  creditCard
  bankTransfer
  eWallet
}

model Payment {
  id            String        @id @default(uuid())
  orderID       String
  type          PaymentType
  status        PaymentStatus
  amount        Decimal
  transactionID String?
  createdAt     DateTime      @default(now())
  createdBy     String?
  updatedAt     DateTime      @updatedAt
  deletedAt     DateTime?

  order Order @relation(fields: [orderID], references: [id])
}
